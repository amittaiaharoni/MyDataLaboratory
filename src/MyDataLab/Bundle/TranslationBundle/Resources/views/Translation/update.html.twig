{% extends '@MyDataLabTranslation/Translation/base.html.twig' %}
{% block title %}Create{% endblock %}
{% block content %}
    <div clas="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title fl-l">{{ title }}</h3>
                {% block languageSelector %}{{ parent() }}{% endblock %}
            </div>
            <div class="box-body">
                {% for translation in translations %}
                    <div class="form-group">
                        <label class="control-label">{{ translation.language.name }}</label>
                        <p>{{ translation.target }}</p>
                    </div>
                {% endfor %}
                {{ form(translationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    {{ parent() }}
{% endblock %}