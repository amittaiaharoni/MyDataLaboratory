<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity repository-class="MyDataLab\Bundle\BlogBundle\Repository\TagRepository" name="MyDataLab\Bundle\BlogBundle\Entity\Tag" table="mdl_tags">
        <indexes>
            <index name="name_idx" columns="name"/>
        </indexes>
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="name" type="string" column="name" length="255" unique="true"/>

        <many-to-many field="posts" mapped-by="tags" target-entity="Post"/>
    </entity>
</doctrine-mapping>
 