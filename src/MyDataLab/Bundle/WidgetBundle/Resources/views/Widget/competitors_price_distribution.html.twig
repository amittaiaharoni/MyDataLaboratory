<div class="box mdl-widget-stacked-column-chart mdl-widget" data-widget-id="{{ widget.id }}">
    <div class="box-header with-border">
        <button type="button" class="btn btn-primary btn-sm pull-right" data-widget="collapse" data-toggle="tooltip" title="Collapse" style="margin-right: 5px;">
            <i class="fa fa-minus"></i>
        </button>
        <h3 class="box-title">{% filter title %}{% trans %}COMPETITOR_PRICE_DISTRIBUTION{% endtrans %}{% endfilter %}</h3>
    </div>
    <table class="mdl-widget-source-table" style="display: none;">
        <thead>
            <tr>
                <th>Competitor Name</th>
                <th style="background-color: #99CA3C;">I am cheaper</th>
                <th style="background-color: #E12010;">I am more expensive</th>
                <th style="background-color: #5866FF">Prices are equal</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Competitor 1</td>
                <td>10</td>
                <td>24</td>
                <td>20</td>
            </tr>
            <tr>
                <td>Competitor 2</td>
                <td>16</td>
                <td>22</td>
                <td>23</td>
            </tr>
            <tr>
                <td>Competitor 3</td>
                <td>28</td>
                <td>19</td>
                <td>29</td>
            </tr>
        </tbody>
    </table>
    <div class="box-body chart" id="columnchart_values"></div>
    <div class="box-footer"></div>
</div>