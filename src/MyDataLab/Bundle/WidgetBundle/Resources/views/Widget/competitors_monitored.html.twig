<div class="box mdl-widget-pie-chart mdl-widget" data-widget-id="{{ widget.id }}">
    <div class="box-header with-border">
        <button type="button" class="btn btn-primary btn-sm pull-right" data-widget="collapse" data-toggle="tooltip" title="Collapse" style="margin-right: 5px;">
            <i class="fa fa-minus"></i>
        </button>
        <h3 class="box-title">{% filter title %}{% trans %}COMPETITORS_MONITORED{% endtrans %}{% endfilter %}</h3>
    </div>
    <table class="mdl-widget-source-table" style="display: none;">
        <thead>
            <tr>
                <th>Status</th>
                <th>Nr. of products</th>
            </tr>
        </thead>
        <tbody>
            <tr style="background-color: #99CA3C;">
                <td>I am cheaper</td>
                <td>8</td>
            </tr>
            <tr style="background-color: #E12010;">
                <td>I am more expensive</td>
                <td>16</td>
            </tr>
            <tr style="background-color: #5866FF">
                <td>Prices are equal</td>
                <td>12</td>
            </tr>
        </tbody>
    </table>
    <div class="box-body chart"> </div>
    <div class="box-footer"></div>
</div>