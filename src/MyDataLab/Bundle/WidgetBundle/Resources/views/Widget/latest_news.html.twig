<div class="box modal-info mdl-widget" data-widget-id="{{ widget.id }}">
    <div class="box-header modal-header with-border">
        <button type="button" class="btn btn-primary btn-sm pull-right" data-widget="collapse" data-toggle="tooltip" title="Collapse" style="margin-right: 5px;">
            <i class="fa fa-minus"></i>
        </button>
        <h3 class="box-title">{% filter capitalize %}{% trans %}DATALABORATORY_LATEST_NEWS_H3{% endtrans %}{% endfilter %}</h3></div>
    <div class="box-body">
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-ban"></i> Alert!</h4> Danger alert preview. This alert is dismissable.</div>
        <div class="alert alert-info alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-info"></i> Alert!</h4> Info alert preview. This alert is dismissable.</div>
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-warning"></i> Alert!</h4> Warning alert preview. This alert is dismissable.</div>
    </div>
    <div class="box-footer modal-footer">
        <button type="button" class="btn btn-outline pull-left" data-widget="remove">{% filter capitalize %}{% trans %}CLOSE{% endtrans %}{% endfilter %}</button>
        <button type="button" class="btn btn-outline">{% filter capitalize %}{% trans %}SAVE_CHANGES{% endtrans %}{% endfilter %}</button>
    </div>
</div>