<aside class="main-sidebar">
    <section class="sidebar">
        <div class="user-panel">
            <div class="pull-left image">
                <img src="{{ asset('bundles/mydatalabadmin/img/user2-160x160.jpg') }}" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>MonStore.com</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        {% block searchform %}
            <form action="#" method="get" class="sidebar-form">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Search...">
                    <span class="input-group-btn">
                        <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </form>
        {% endblock %}
        <ul class="sidebar-menu">
            <li class="header">{% filter upper %}{% trans %}MAIN_NAVIGATION{% endtrans %}{% endfilter %}</li>
                {% for menu in menuBuilder.getMenus() %}
                <li class="{% if menu.active %}active{% endif %}{% if menu.submenus is defined %} treeview{% endif %}">
                    <a href="{% if menu.name is defined %}{{ path(menu.name) }}{% else %}#{% endif %}">
                        <i class="fa fa-{{ menu.icon }}{% if menu.color is defined %} text-{{ menu.color }}{% endif %}"></i>
                        <span>{{ menu.title|trans|title }}</span>
                        {% if menu.submenus is defined %}
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        {% endif %}
                    </a>
                    {% if menu.submenus is defined and menu.submenus|length %}
                        <ul class="treeview-menu">
                            {% for submenu in menu.submenus %}
                                <li{% if submenu.active %} class="active"{% endif %}>
                                    <a href="{{ path(submenu.name) }}">
                                        <i class="fa fa-circle-o"></i>
                                        <span>{{ submenu.title|trans|title }}</span>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </section>
</aside>