{% trans_default_domain 'FOSUserBundle' %}
<section class="well-sm">
    <div class="container">
        <div class="row flow-offset-1">
            <div class="col-md-6 col-md-offset-3 btn-shadow inset-sm-min img-rounded bg-info">
                <h5 style="color:#FFFFFF" class="text-center">Sign in</h5>
                <form action="{{ path("fos_user_security_check") }}" method="post" class="row label-insets">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <div class="form-group col-sm-12">
                        <label for="username" class="text-uppercase font-secondary">{{ 'security.login.username'|trans }}</label>
                        <label for="username"></label>
                        <input
                            placeholder="{% trans %}Username or E-mail{% endtrans %}"
                            value="{{ last_username }}"
                            id="username" 
                            name="_username"
                            class="form-control round-small"
                            required
                            >
                    </div>
                    <div class="form-group col-sm-6">
                        <label for="password" class="text-uppercase font-secondaru">{{ 'security.login.password'|trans }}</label>
                        <input
                            type="password"
                            placeholder="{% trans %}Your password{% endtrans %}"
                            id="password"
                            name="_password"
                            class="form-control round-small"
                            required
                            >
                    </div>
                    <div class="col-sm-6">
{#                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>#}
{#                        <input type="checkbox" id="remember_me" name="_remember_me" value="on">#}
                        <input type="submit" class="btn btn-success btn-xs round-small btn-block form-el-offset-1  round-xl" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}">
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>



