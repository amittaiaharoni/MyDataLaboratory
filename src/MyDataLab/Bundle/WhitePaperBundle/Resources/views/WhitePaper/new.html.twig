{% extends 'MyDataLabAdminBundle::base.html.twig' %}
{% block title %}Create{% endblock %}
{% block content %}
    <div clas="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title fl-l">{% filter capitalize %}{% trans %}Create White Paper{% endtrans %}{% endfilter %}</h3>
            </div>
            <div class="box-body">
                {{ form_start(createForm, {'attr': {'class': 'inline'}}) }}
                {{ form_row(createForm.title) }}
                <div class="form-group">
                    {{ form_label(createForm.slug) }}
                    {{ form_widget(createForm.slug) }}
                    <p class="help-block" id="slugify_insert_text"></p>
                </div>
                {{ form_row(createForm.language) }}
                {{ form_row(createForm.file) }}
                {% if whitePaper.file is defined %}<a href="{{ asset('whitepapers/' ~ whitePaper.file) }}">{{ whitePaper.title }}</a>{% endif %}
                {{ form_row(createForm.image) }}
                {% if whitePaper.image is defined %}<img src="{{ asset('images/white-papers/' ~ whitePaper.image) }}">{% endif %}
                {{ form_row(createForm.metaDescription) }}
                {{ form_row(createForm.description) }}
                {{ form_widget(createForm.save) }}
                {{ form_end(createForm) }}
                {% if deleteForm is defined %}
                    {{ form_start(deleteForm, {'attr': {'class': 'inline'}}) }}
                    {{ form_widget(deleteForm.delete) }}
                    {{ form_end(deleteForm) }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/mydatalabglossary/js/glossary.js') }}"></script>
{% endblock %}