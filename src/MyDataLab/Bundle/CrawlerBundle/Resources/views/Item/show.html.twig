{% extends 'MyDataLabAdminBundle::base.html.twig' %}
{% block title %}Crawler item {{ item.name }}{% endblock %}
{% block content %}
    <h1>Item</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ item.name }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('my_data_lab_crawler_items_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('my_data_lab_crawler_items_edit', { 'id': item.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
